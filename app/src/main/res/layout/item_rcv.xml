<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/white">
<ImageView
    android:id="@+id/image"
    android:layout_width="60sp"
    android:layout_height="60sp"
    android:src="@drawable/anh2"
    />

    <TextView
        android:id="@+id/tv_tenSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ten san pham"
        android:layout_toRightOf="@id/image"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/image"
        android:layout_below="@id/tv_tenSP">
        <TextView
            android:id="@+id/tv_giaBan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gia ban "
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - SL: "
            />
        <TextView
            android:id="@+id/tv_soLuong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="so luong"
            />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_luaChon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/ic_handle"
        android:layout_marginTop="7dp"
        />


</RelativeLayout>