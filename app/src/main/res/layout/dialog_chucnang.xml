<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="380dp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/desDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="15dp"
            android:text="Chọn chức năng"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_sua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/desDialog"
            android:layout_marginStart="20.8dp"
            android:layout_marginTop="18.2dp"
            android:layout_marginEnd="20.8dp"
            android:background="@drawable/background_button"
            android:text="Sửa"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_xoa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_sua"
            android:layout_marginStart="20.8dp"
            android:layout_marginTop="18.2dp"
            android:layout_marginEnd="20.8dp"
            android:background="@drawable/background_button"
            android:text="Xóa"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_xemchiTiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_xoa"
            android:layout_marginStart="20.8dp"
            android:layout_marginTop="18.2dp"
            android:layout_marginEnd="20.8dp"
            android:background="@drawable/background_button"
            android:text="Xem chi tiết"
            android:textAllCaps="false"
            android:textColor="@color/white" />


    </RelativeLayout>
    <ImageView
        android:id="@+id/iconDialog"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_logopoly" />

</RelativeLayout>